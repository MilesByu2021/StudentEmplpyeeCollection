@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4" >Welcome</h1>
    <h4 style="font-weight:lighter">
        Below is the table of current student employees working withinin the Information Systems Department. 
    </h4>
    <h6 style="font-weight:lighter">
        To view more informaiton about a particular student, please select the 'Edit' button to the left of their name. 
        This will show their current information in an editable form, along with their current positions and relevant data.

    </h6>
</div>

@model List<Student>
<br />
<div align="center">
    <form method="post" asp-controller="Home" asp-action="ExportToCSVStudent"> 
        <input type="submit" value="Export To CSV" class="btn btn-info"/>
    </form>
</div>

<br />
<div style="width:auto">
    <table class="table table-bordered table-hover">
        <thead style="width:auto" class="thead-light">
            <tr>
                @*Student Table*@
                <th>Edit</th>
                <th>BYU ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>International</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Semester</th>
                <th>Year</th>
                <th>Program Year</th>
                <th>Phone</th>
                <th>BYU Name</th>
                <th>Pay Grad Tuition</th>
                <th>Submitted E-Form</th>
                <th>Submission Date</th>
                <th>Notes</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Student s in Model)
            {
                <tr>
                    <td><a asp-controller="Home" asp-action="EditForm" asp-route-byuid="@s.BYUID" class="btn btn-info">Edit</a></td>
                    <td>@s.BYUID</td>
                    <td>@s.FirstName </td>
                    <td>@s.LastName </td>
                    <td>@s.International </td>
                    <td>@s.Gender </td>
                    <td>@s.EmailAddress</td>
                    <td>@s.Semester</td>
                    <td>@s.Year </td>
                    <td>@s.ProgramYear</td>
                    <td>@s.Phone </td>
                    <td>@s.BYUName </td>
                    <td>@s.PayGradTuition</td>
                    <td>@s.SubmittedEForm </td>
                    <td>@s.SubmissionDate </td>
                    <td>@s.Notes </td>
                </tr>
            }

        </tbody>
    </table>
</div>